<Window x:Class="PrivoxyManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Privoxy Manager"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#F3F3F3">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#E1E1E1"/>
            <Setter Property="Foreground" Value="#323130"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#D1D1D1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#C1C1C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Success Button Style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#107C10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0E6B0E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0C5A0C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Danger Button Style -->
        <Style x:Key="DangerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#B32B2F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#A4262C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TabControl Style -->
        <Style x:Key="ModernTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Background="White">
                                <TabPanel x:Name="HeaderPanel"
                                          IsItemsHost="True"
                                          Margin="0,0,0,0"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="#E1E1E1"
                                    BorderThickness="0,1,0,0"
                                    CornerRadius="0,0,8,8">
                                <ContentPresenter x:Name="PART_SelectedContentHost"
                                                  ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern TabItem Style -->
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#605E5C"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="#0078D4"/>
                                <Setter Property="Foreground" Value="#323130"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F3F2F1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <TabControl x:Name="MainTabs"
                Margin="10"
                Style="{StaticResource ModernTabControlStyle}">
        <TabItem Header="Config" Style="{StaticResource ModernTabItemStyle}">
            <Grid Margin="12">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border x:Name="AdminWarningPanel"
                        Background="#FFF4CE"
                        Padding="12"
                        CornerRadius="4"
                        Visibility="Collapsed">
                    <TextBlock Text="⚠ Приложение запущено без прав администратора. Некоторые функции будут недоступны."
                               Foreground="#8B4513"
                               FontWeight="SemiBold"/>
                </Border>

                <!-- Верхняя панель настроек -->
                <Border Grid.Row="0"
                        Padding="16"
                        CornerRadius="8"
                        Background="White"
                        BorderThickness="1"
                        BorderBrush="#E1E1E1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical"
                                    Margin="0,0,20,0">
                            <Button Content="Run as Administrator"
                                    Margin="0,10,0,0"
                                    Padding="12,6"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Click="RunAsAdmin_Click"/>

                            <TextBlock Text="Config file:"
                                       FontWeight="SemiBold"
                                       Margin="0,16,0,8"/>
                            <DockPanel Margin="0,0,0,0">
                                <TextBox x:Name="ConfigPathTextBox"
                                         Text="D:\tools\privoxy\config.txt"
                                         MinWidth="350"
                                         VerticalAlignment="Center"
                                         Style="{StaticResource ModernTextBoxStyle}"/>
                                <Button Content="Browse..."
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="BrowseConfig_Click"/>
                            </DockPanel>

                            <TextBlock Text="Service name:"
                                       Margin="0,16,0,8"
                                       FontWeight="SemiBold"/>
                            <DockPanel Margin="0,0,0,0">
                                <TextBox x:Name="ServiceNameTextBox"
                                         Text="Privoxy"
                                         MinWidth="200"
                                         VerticalAlignment="Center"
                                         Style="{StaticResource ModernTextBoxStyle}"/>
                                <Button Content="Detect"
                                        Margin="8,0,0,0"
                                        Padding="12,6"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="DetectService_Click"/>
                            </DockPanel>
                        </StackPanel>

                        <!-- Кнопки управления службой -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Service control"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,0">
                                <Button Content="Start"
                                        Width="70"
                                        Margin="0,0,6,0"
                                        Style="{StaticResource SuccessButtonStyle}"
                                        Click="StartService_Click"/>
                                <Button Content="Stop"
                                        Width="70"
                                        Margin="0,0,6,0"
                                        Style="{StaticResource DangerButtonStyle}"
                                        Click="StopService_Click"/>
                                <Button Content="Restart"
                                        Width="80"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="RestartService_Click"/>
                            </StackPanel>
                            <TextBlock x:Name="ServiceStatusTextBlock"
                                       Margin="0,12,0,0"
                                       FontWeight="SemiBold"/>
                        </StackPanel>

                        <!-- Кнопки работы с конфигом -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Vertical"
                                    VerticalAlignment="Center">
                            <TextBlock Text="Config actions"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,0">
                                <Button Content="Load"
                                        Width="80"
                                        Margin="0,0,6,0"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="LoadConfig_Click"/>
                                <Button Content="Save"
                                        Width="80"
                                        Margin="0,0,6,0"
                                        Style="{StaticResource SecondaryButtonStyle}"
                                        Click="SaveConfig_Click"/>
                                <Button Content="Save + Restart"
                                        Width="120"
                                        Style="{StaticResource ModernButtonStyle}"
                                        Click="SaveAndRestart_Click"/>
                            </StackPanel>
                            <TextBlock x:Name="StatusTextBlock"
                                       Margin="0,12,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Разделитель -->
                <Border Grid.Row="1"
                        Background="#E1E1E1"/>

                <!-- Редактор конфига -->
                <Border Grid.Row="2"
                        Padding="12"
                        BorderBrush="#E1E1E1"
                        BorderThickness="1"
                        CornerRadius="8"
                        Background="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="config.txt"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   FontSize="14"/>
                        <ScrollViewer Grid.Row="1"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Auto">
                            <TextBox x:Name="ConfigEditorTextBox"
                                     FontFamily="Consolas"
                                     FontSize="13"
                                     AcceptsReturn="True"
                                     AcceptsTab="True"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     TextWrapping="NoWrap"
                                     Background="#FAFAFA"
                                     BorderBrush="#E1E1E1"
                                     BorderThickness="1"
                                     Padding="8"/>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Низ: подсказка -->
                <TextBlock Grid.Row="3"
                           Margin="4,8,4,0"
                           Foreground="#605E5C"
                           FontSize="11"
                           Text="Privoxy Manager edits config.txt and manages the Windows 'Privoxy' service. All operations are performed on behalf of the current user; running the service requires an Administrator."/>
            </Grid>
        </TabItem>
        <TabItem Header="Log" Style="{StaticResource ModernTabItemStyle}">
            <Grid Margin="12">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Margin="0,0,0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Log control buttons -->
                    <StackPanel Grid.Row="0"
                                Orientation="Horizontal"
                                Margin="0,0,0,8">
                        <Button Content="Start log"
                                Width="100"
                                Style="{StaticResource SuccessButtonStyle}"
                                Click="StartLog_Click"/>
                        <Button Content="Stop log"
                                Width="100"
                                Margin="10,0,0,0"
                                Style="{StaticResource DangerButtonStyle}"
                                Click="StopLog_Click"/>
                        <Button Content="Clear"
                                Width="100"
                                Margin="10,0,0,0"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Click="ClearLog_Click"/>
                    </StackPanel>
                    
                    <!-- Filter controls -->
                    <StackPanel Grid.Row="1"
                                Orientation="Horizontal">
                        <TextBlock Text="Filter:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   FontWeight="SemiBold"/>
                        <TextBox x:Name="FilterTextBox"
                                 Width="200"
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 TextChanged="FilterTextBox_TextChanged"/>
                        <Button Content="Clear Filter"
                                 Width="100"
                                 Margin="10,0,0,0"
                                 Style="{StaticResource SecondaryButtonStyle}"
                                 Click="ClearFilter_Click"/>
                        <CheckBox x:Name="AutoScrollCheckBox"
                                  Content="Auto-scroll"
                                  IsChecked="True"
                                  VerticalAlignment="Center"
                                  Margin="20,0,0,0"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1"
                        Background="White"
                        BorderBrush="#E1E1E1"
                        BorderThickness="1"
                        CornerRadius="8">
                    <ListBox x:Name="LogList"
                             FontFamily="Consolas"
                             FontSize="13"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding"
                                        Value="8,4"/>
                                <Setter Property="BorderThickness"
                                        Value="0"/>
                                <Setter Property="Background"
                                        Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#F3F2F1"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#E1F5FE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.Resources>
                    </ListBox>
                </Border>

            </Grid>
        </TabItem>
    </TabControl>
</Window>